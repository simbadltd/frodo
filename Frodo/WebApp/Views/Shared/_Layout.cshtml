@using System.Collections
@using System.Collections.Generic
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>

    <script src="~/scripts/jquery-1.9.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/content/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/content/bootstrap-theme.min.css"/>
</head>

<body>

<div class="container">
    <div class="row">
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <img class="navbar-brand" style="padding: 5px 5px;" src="~/images/logo.png">
            </div>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/">Home</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">Private Office <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/privateOffice">Profile</a></li>
                            <li><a href="~/privateOffice/import">Import state</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </nav>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Errors.Value != null && ((ICollection) ViewBag.Errors.Value).Count > 0)
            {
                <div class="alert alert-danger">
                    <p>
                        @foreach (var error in (IDictionary<string, List<string>>) @ViewBag.Errors.Value)
                        {
                            @Html.Raw(@error.Key + ": " + string.Join(", ", error.Value) + "<br/>")
                        }
                    </p>
                </div>
            }

            @RenderBody()
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        </div>
    </div>
</div>

</body>
</html>